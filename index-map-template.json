{
    "index_patterns" : [
        "smtp-*"
    ],
    "settings" : {
      "index" : {
        "number_of_shards" : "2"
      }
    },
    "mappings" : {
        "haraka" : {
            "dynamic_templates" : [
                { "fail_results" : {
                        "match" : "fail",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                },
                { "pass_results" : {
                        "match" : "pass",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                },
                { "skip_results" : {
                        "match" : "skip",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                },
                { "msg_results" : {
                        "match" : "plugin.*.msg",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                },
                { "err_results" : {
                        "match" : "err",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                },
                { "ip_addrs" : {
                        "match" : "ip",
                        "mapping" : { "type" : "ip" }
                    }
                },
                { "hostnames" : {
                        "match" : "host",
                        "mapping" : {
                            "type" : "text", "index" : false
                        }
                    }
                }
            ],
            "properties" : {
                "plugin" : {
                    "properties" : {
                        "asn" : {
                            "properties" : {
                                "org" : { "type" : "text", "index" : false },
                                "asn_good"        : { "type" : "double" },
                                "asn_bad"         : { "type" : "double" },
                                "asn_score"       : { "type" : "double" },
                                "asn_connections" : { "type" : "double" }
                            }
                        },
                        "geoip" : {
                            "properties" : {
                                "org"      : { "type" : "text", "index" : false },
                                "geo"      : { "type" : "geo_point" },
                                "distance" : { "type" : "float" }
                            }
                        },
                        "helo" : {
                            "properties"   : {
                                "ips"      : { "type" : "text", "index" : false }
                            }
                        },
                        "fcrdns" : {
                            "properties"    : {
                                "fcrdns"    : { "type" : "text", "index" : false },
                                "other_ips" : { "type" : "text", "index" : false },
                                "ptr_names" : { "type" : "text", "index" : false }
                            }
                        },
                        "p0f" : {
                            "properties" : {
                                "os_flavor" : { "type" : "text", "index" : false }
                            }
                        },
                        "rspamd" : {
                            "properties"   : {
                                "emails"   : { "type" : "text", "index" : false },
                                "urls"     : { "type" : "text", "index" : false },
                                "messages" : { "type" : "text", "index" : false }
                            }
                        },
                        "karma" : {
                            "properties" : {
                                "connect"   : { "type" : "double" },
                                "score"     : { "type" : "double" },
                                "good"      : { "type" : "double" },
                                "bad"       : { "type" : "double" },
                                "history"   : { "type" : "double" },
                                "connections" : { "type" : "double" },
                                "total_connects" : { "type" : "double" },
                                "neighbors" : { "type" : "double" }
                            }
                        },
                        "spamassassin" : {
                            "properties" : {
                                "headers": {
                                    "properties" : {
                                        "report" : { "type" : "text", "index" : false },
                                        "Status" : { "type" : "text", "index" : false }
                                    }
                                },
                                "line0" : { "type" : "text", "index" : false },
                                "reqd"  : { "type" : "double" },
                                "score" : { "type" : "double" },
                                "tests" : { "type" : "text", "index" : false }
                            }
                        },
                        "spf" : {
                            "properties" : {
                                "domain" : { "type" : "text", "index" : false }
                            }
                        }
                    }
                },
                "message" : {
                    "properties" : {
                        "bytes" : { "type": "double" },
                        "envelope": {
                            "properties": {
                                "sender" : { "type" : "text", "index" : false },
                                "recipient" : {
                                    "properties"  : {
                                        "action"  : { "type" : "text", "index" : false },
                                        "address" : { "type" : "text", "index" : false }
                                    }
                                }
                            }
                        },
                        "header": {
                            "properties": {
                                "from"         : { "type" : "text", "index" : false },
                                "to"           : { "type" : "text", "index" : false },
                                "subject"      : { "type" : "text", "index" : false },
                                "message-id"   : { "type" : "text", "index" : false },
                                "date"         : { "type" : "text", "index" : false },
                                "reply-to"     : { "type" : "text", "index" : false },
                                "resent-from"  : { "type" : "text", "index" : false },
                                "resent-header": { "type" : "text", "index" : false },
                                "sender"       : { "type" : "text", "index" : false }
                            }
                        },
                        "body" : {
                            "properties" : {
                                "attachment" : {
                                    "properties": {
                                        "bytes" : { "type" : "float" },
                                        "ctype" : { "type" : "text" },
                                        "file"  : { "type" : "text" },
                                        "md5"   : { "type" : "text", "index": false }
                                    }
                                }
                            }
                        },
                        "queue" : {
                            "properties" : {

                            }
                        }
                    }
                },
                "connection" : {
                    "properties" : {
                        "count" : {
                            "properties" : {
                                "msg" : {
                                    "properties" : {
                                        "accept" : { "type": "integer" },
                                        "reject" : { "type": "integer" },
                                        "tempfail" : { "type": "integer" }
                                    }
                                },
                                "rcpt" : {
                                    "properties" : {
                                        "accept" : { "type": "integer" },
                                        "reject" : { "type": "integer" },
                                        "tempfail" : { "type": "integer" }
                                    }
                                },
                                "errors" : { "type": "integer" },
                                "trans" : { "type": "integer" }
                            }
                        },
                        "early" : { "type" : "boolean" },
                        "early_talker" : { "type" : "boolean" },
                        "relay" : { "type" : "boolean" },
                        "relaying" : { "type" : "boolean" },
                        "tls" : { "type" : "boolean" },
                        "using_tls" : { "type" : "boolean" }
                    }
                }
            }
        }
    }
}